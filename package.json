{
  "name": "@tracekit/react-native",
  "version": "1.0.1",
  "description": "TraceKit APM for React Native - Zero-config performance monitoring and live debugging for Expo and React Native apps",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "react-native": "src/index.ts",
  "source": "src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./expo": {
      "types": "./dist/expo/index.d.ts",
      "import": "./dist/expo/index.mjs",
      "require": "./dist/expo/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/expo/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts src/expo/index.ts --format cjs,esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "tracekit",
    "apm",
    "monitoring",
    "performance",
    "react-native",
    "expo",
    "debugging",
    "tracing",
    "error-tracking",
    "crash-reporting",
    "analytics",
    "observability"
  ],
  "author": "TraceKit Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tracekit-Dev/react-native-apm.git"
  },
  "bugs": {
    "url": "https://github.com/Tracekit-Dev/react-native-apm/issues"
  },
  "homepage": "https://tracekit.dev",
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-native": ">=0.64.0"
  },
  "peerDependenciesMeta": {
    "expo": {
      "optional": true
    },
    "expo-application": {
      "optional": true
    },
    "expo-constants": {
      "optional": true
    },
    "expo-device": {
      "optional": true
    },
    "@react-navigation/native": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-native": "^0.72.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
